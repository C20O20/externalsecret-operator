#!/bin/sh -e

# This is documented here:
# https://docs.openshift.com/container-platform/3.11/creating_images/guidelines.html#openshift-specific-guidelines

HOME=/home/${USER_NAME}

echo "${USER_NAME:-externalsecret-operator}:x:$(id -u):$(id -g):${USER_NAME:-externalsecret-operator} user:${HOME}:/sbin/nologin" >> /etc/passwd

exec ${OPERATOR} $@
